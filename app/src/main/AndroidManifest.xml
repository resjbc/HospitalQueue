<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hospital.hospitalqueue">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmployeeLogin"
            android:label="@string/title_activity_employee_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserVisitDetail"
            android:label="@string/title_activity_user_visit_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowQueue"
            android:label="@string/title_activity_show_queue"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>