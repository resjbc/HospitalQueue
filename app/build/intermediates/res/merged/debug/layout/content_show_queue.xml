<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hospital.hospitalqueue.ShowQueue"
    tools:showIn="@layout/activity_show_queue"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="643dp"
        tools:layout_editor_absoluteY="247dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/t_patient_present_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/t_showAll"
        android:textColor="@color/white"
        android:textSize="@dimen/t_queue_show_date"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/t_patient_number_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent2"
        android:paddingLeft="@dimen/p_r_l"
        android:text="@string/t_showAll"
        android:textColor="@color/main2"
        android:textSize="@dimen/t_queue_show_all_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_patient_present_date" />

    <TextView
        android:id="@+id/t_patient_compute_queue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="@string/t_showAll"
        android:paddingLeft="@dimen/p_r_l"
        android:textColor="@color/white"
        android:textSize="@dimen/t_queue_show_dascription_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_patient_queue_all_queue" />

    <TextView
        android:id="@+id/t_patient_queue_all_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="@dimen/t_queue_show_dascription_head"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_patient_queue_description_head"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/t_patient_description_head_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/t_show_queue_description_patient"
        android:textColor="@color/white"
        android:textSize="@dimen/t_queue_show_dascription_head"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/t_patient_compute_queue"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/t_patient_dx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/t_showAll"
            android:textColor="@color/white"
            android:textSize="@dimen/t_queue_show_dascription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_patient_description_head_patient"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/t_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/t_showAll"
            android:textColor="@color/white"
            android:textSize="@dimen/t_queue_show_dascription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/t_patient_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/t_showAll"
            android:textColor="@color/white"
            android:textSize="@dimen/t_queue_show_dascription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/EmployeeLogin"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_patient_number_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_patient_queue_description_head_present"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/t_show_queue_description_present_queue"
                android:paddingTop="@dimen/p_t_b"
                android:textColor="@color/black"
                android:textSize="@dimen/t_queue_show_dascription_head"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="137dp" />

            <TextView
                android:id="@+id/t_patient_queue_present"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/t_showAll_zero"
                android:textColor="@color/main"
                android:textSize="@dimen/t_queue_show_number"

                tools:layout_editor_absoluteX="143dp"
                tools:layout_editor_absoluteY="159dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_next_queue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/t_patient_queue_description_head_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/p_t_b"
                android:gravity="center"
                android:text="@string/t_show_queue_description_next_queue"
                android:textColor="@color/black"
                android:textSize="@dimen/t_queue_show_dascription_head"
                android:visibility="visible"
                tools:layout_editor_absoluteX="322dp"
                tools:layout_editor_absoluteY="184dp" />

            <TextView
                android:id="@+id/t_patient_queue_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/t_showAll_zero"
                android:textColor="@color/main"
                android:textSize="@dimen/t_queue_show_number"
                android:visibility="visible"
                tools:layout_editor_absoluteX="292dp"
                tools:layout_editor_absoluteY="201dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/t_patient_queue_description_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="9dp"
        android:layout_marginTop="24dp"
        android:text="@string/t_show_queue_description"
        android:textColor="@color/white"
        android:textSize="@dimen/t_queue_show_dascription_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_all"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="9dp" />

    <Button
        android:id="@+id/b_cancel_queue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/b_show_queue_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>
